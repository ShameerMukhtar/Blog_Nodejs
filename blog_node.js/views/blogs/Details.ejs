<!DOCTYPE html>
<html lang="en">
    
<%- include("../partials/head.ejs") %>
<body>
<%- include('../partials/nav.ejs') %>


  

  <h2><%=blog.title%></h2>


 <div class="details">
<h1><%=blog.title%></h1>
<p><%=blog.snippet%></p>
<p><%=blog.body%></p>
<a class="delete" data-doc="<%=blog._id %>">
  <img src="/Trashcan.svg" alt="delete icon">
</a>
   
 </div>
<script>
const trashcan=document.querySelector('a.delete');
trashcan.addEventListener('click',(e)=>{
const endpoint=`/blogs/${trashcan.dataset.doc}`;
fetch(endpoint,{
  method:'DELETE'
}).then((response)=>response.json()).then((data)=>window.location.href = data.redirect).catch((err)=>{
console.log(err);
})
})

</script>




